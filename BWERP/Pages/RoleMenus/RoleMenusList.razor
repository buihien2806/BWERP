									<path fill-rule="evenodd" d="M3 4.5a.5.5 0 0 1 .5-.5h6a.5.5 0 1 1 0 1h-6a.5.5 0 0 1-.5-.5zm0 2a.5.5 0 0 1 .5-.5h6a.5.5 0 1 1 0 1h-6a.5.5 0 0 1-.5-.5zm0 2a.5.5 0 0 1 .5-.5h6a.5.5 0 1 1 0 1h-6a.5.5 0 0 1-.5-.5zm0 2a.5.5 0 0 1 .5-.5h6a.5.5 0 0 1 0 1h-6a.5.5 0 0 1-.5-.5zm8-6a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 0 1h-1a.5.5 0 0 1-.5-.5zm0 2a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 0 1h-1a.5.5 0 0 1-.5-.5zm0 2a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 0 1h-1a.5.5 0 0 1-.5-.5zm0 2a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 0 1h-1a.5.5 0 0 1-.5-.5z" />
								</svg>
							</div><!--//icon-holder-->

						</div><!--//col-->
						<div class="col-auto">
							<h4 class="app-card-title">Search</h4>
						</div><!--//col-->
					</div><!--//row-->
				</div><!--//app-card-header-->
				<EditForm Model="@listSearch" OnSubmit="@SearchForm">
					<div class="app-card-body px-4">
						<div class="intro">
							<div class="row">
								<div class="col-auto">
									<label class="form-label">Role</label>
									<InputSelect class="form-select" @bind-Value="listSearch.RoleId" @oninput="HandleSelectedIndexChanged">
										@foreach (var item in roleViewDtos)
										{
											<option value="@item.Id">@item.Name</option>
										}
									</InputSelect>
									<ValidationMessage For="()=>listSearch.RoleId"></ValidationMessage>
								</div>
							</div>

						</div>
					</div><!--//app-card-body-->
					<div class="app-card-footer p-4 mt-auto">
						<button type="submit" class="btn app-btn-secondary">Search</button>
						<a href="/tasks/taskcreate" class="btn app-btn-primary">Save</a>
					</div><!--//app-card-footer-->
				</EditForm>
			</div><!--//app-card-->
		</div>
		<div class="row">
			<div class="app-card app-card-stats-table h-100 shadow-sm">
				<div class="app-card-header p-3">
					<div class="row justify-content-between align-items-center">
						<div class="col-auto">
							<h4 class="app-card-title">Menu List</h4>
						</div><!--//col-->
						<div class="col-auto">
							<div class="card-header-action">
								<a href="#">View report</a>
							</div><!--//card-header-actions-->
						</div><!--//col-->
					</div><!--//row-->
				</div><!--//app-card-header-->
				<div class="app-card-body p-3 p-lg-4">
					<div class="table-responsive">
						<table class="table table-hover mb-0">
							<thead class="table-light">
								<tr>
									<th>Role</th>
									<th>Menu Id</th>
									<th>Menu Name</th>
									<th></th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in roleMenusDtos)
								{
									<tr>
										<td>@item.RoleName</td>
										<td>@item.MenuId</td>
										<td>@item.MenuName</td>
										<td>
											<a href="/tasks/taskdetail/@item.Id" class="btn btn-primary">Detail</a>
											<a href="/tasks/taskedit/@item.Id" class="btn btn-warning">Edit</a>
											@*<button class="btn btn-danger" @onclick="()=> OnDeleteTask(item.Id)">Delete</button>*@

										</td>
									</tr>
								}
							</tbody>
							<tfoot>
								<Pagination MetaData="MetaData" Spread="2" SelectedPage="SelectedPage"></Pagination>
							</tfoot>
						</table>
					</div><!--//table-responsive-->
				</div><!--//app-card-body-->
			</div><!--//app-card-->
		</div>
	</div>
}


